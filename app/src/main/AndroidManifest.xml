<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wlx.proxy">

    <application
        android:name="com.wlx.proxy_core.ProxyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--真实的Application的全名-->
        <meta-data android:name="app_name" android:value="com.wlx.proxy.MyApplication"/>

        <!--用于dex后的目录名_版本号-->
        <meta-data android:name="app_version" android:value="\dexDir_1.0"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MyService"/>
        <receiver android:name=".MyBroadCastReciver">
            <intent-filter>
                <action android:name="com.dongnao.broadcast.test"/>
            </intent-filter>
        </receiver>

        <provider
            android:authorities="com.wlx.proxy.MyProvider"
            android:name=".MyProvider"/>

    </application>

</manifest>